#### create a csv file called in_groups.csv ####

file_name, library_name, group_name
/fungi/taruna/geosmithia_old/trim/gm5/trimmomatic/gm5_k21corr_trim.Phred2_*P.fastq, L1, frags1
/fungi/taruna/geosmithia_old/trim/gm5/nextclip/gm5_mp_cat_R*.fastq, L2, jump2

#### create a csv file called in_libs.csv ####

library_name, project_name, organism_name, type, paired, frag_size, frag_stddev, insert_size, insert_stddev, read_orientation, genomic_start, genomic_end
L1, gm5_ref_genome, geosmithia, fragment, 1, 300, 50, , , inward, 0, 0
L2, gm5_ref_genome, geosmithia, jump, 2, , , 3000, 500, outward, 0, 0

#### Run the Preparation script ####

/opt/allpathslg/bin/PrepareAllPathsInputs.pl \
DATA_DIR=/fungi/taruna/Allpaths \
GENOME_SIZE=26000000 OVERWRITE=True PLOIDY=1 \
HOSTS=36 \
JAVA_MEM_GB=200

#### Run the assembly pipeline. This pipeline creates a new directory under the REFERENCE_NAME. So make sure ####
#### you move the files from the preparation step into the correct directory which should be in PRE/REFERENCE_GENOME/DATA_SUBDIR ####

/opt/allpathslg/bin/RunAllPathsLG THREADS=24 FIX_ASSEMBLY_BASE_ERRORS=TRUE \
PRE=/fungi/taruna/ \
DATA_SUBDIR=Allpaths \
RUN=gm5 MAXPAR=2 \
REFERENCE_NAME=geosmithia \
TARGETS=standard OVERWRITE=True \
CONNECT_SCAFFOLDS=TRUE HAPLOIDIFY=TRUE




























